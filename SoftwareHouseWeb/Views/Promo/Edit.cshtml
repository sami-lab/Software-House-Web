@model SoftwareHouseWeb.ViewModel.PromoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PromoViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PromoCode" class="control-label"></label>
                <input asp-for="PromoCode" class="form-control" />
                <span asp-validation-for="PromoCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PromoDiscount" class="control-label"></label>
                <input asp-for="PromoDiscount" class="form-control" />
                <span asp-validation-for="PromoDiscount" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3 col-sm-12">
                <label>Service Type</label>
                <select asp-for="Ser_id" id="inputState" class="form-control"
                        asp-items="@(new SelectList(@ViewBag.Services, "id", "ServiceName"))">
                    <option selected="selected">Choose...</option>

                </select>
                <span asp-validation-for="Ser_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

