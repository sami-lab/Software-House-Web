@model SoftwareHouseWeb.ViewModel.Administration.RegisterEmployeeViewModel
@using SoftwareHouseWeb.Data.Models.Employee
@{
    ViewData["Title"] = "Add Employee";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add New Employee</h4>

                    <div class="basic-form">
                        <form method="post">
                            <div class="form-group">
                                <label for="">Name</label>
                                <input asp-for="Name" class="form-control input-flat" required placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger col-12"></span>
                            </div>
                            <div class="form-group">
                                <label for="">Number</label>
                                <input asp-for="PhoneNumber" class="form-control input-flat" required placeholder="Phone">
                                <span asp-validation-for="PhoneNumber" class="text-danger col-12"></span>
                            </div>
                            <div class="form-group">
                                <label for="">Email</label>
                                <input asp-for="Email" class="form-control input-flat" required placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger col-12"></span>
                            </div>
                            <div class="form-group">
                                <label for="">Position</label>
                                <input asp-for="Position" class="form-control input-flat" required placeholder="Position">
                                <span asp-validation-for="Email" class="text-danger col-12"></span>
                            </div>
                            <div class="form-group">
                                <div class="row position-set">
                                    <div class="col-md-4">
                                        <label>For</label>
                                        <select asp-for="Time" asp-items="Html.GetEnumSelectList<Time>()" class="form-control" id="timings"></select>
                                        <span asp-validation-for="Time" class="text-danger col-12"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="">Start Date</label>
                                        <input asp-for="StartDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control input-flat to-from"  placeholder="">
                                        <span asp-validation-for="StartDate" class="text-danger col-12"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="">End Date(Optional)</label>
                                        <input asp-for="EndDate"  class="form-control input-flat to-from"  placeholder="">
                                        <span asp-validation-for="EndDate" class="text-danger col-12"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="">Skills</label>
                                <div class="row">
                                    <div class="col-md-3">
                                        <input asp-for="Skill1" class="form-control input-flat" required placeholder="">
                                        <span asp-validation-for="Skill1" class="text-danger col-12"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <input asp-for="Skill2" class="form-control input-flat" placeholder="">
                                    </div>
                                    <div class="col-md-3">
                                        <input asp-for="Skill3" class="form-control input-flat" placeholder="">
                                    </div>
                                    <div class="col-md-3">
                                        <input asp-for="Skill4" class="form-control input-flat" placeholder="">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="">Salary</label>
                                        <input asp-for="Salary" class="form-control input-flat" required placeholder="">
                                        <span asp-validation-for="Salary" class="text-danger col-12"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="">Age</label>
                                        <input asp-for="age" class="form-control input-flat" placeholder="">
                                        <span asp-validation-for="age" class="text-danger col-12"></span>
                                    </div>
                                    <div class="col-md-4 d-flex justify-content-center align-items-center">
                                        <button type="submit" style="width: 100%;" class="btn btn-primary mt-4">ADD</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
