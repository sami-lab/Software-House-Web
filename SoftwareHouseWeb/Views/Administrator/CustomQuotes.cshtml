@model IEnumerable<SoftwareHouseWeb.ViewModel.Home.CustomQuoteViewModel>

@{
    ViewData["Title"] = "Custom Quotes";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Custom Quotes</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Date</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Number</th>
                                    <th>Message</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var inc = 0;}
                                @foreach (var q in Model)
                                {
                                    inc++;
                                    <tr>
                                        <th>@inc</th>
                                        <td>@q.Date.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @q.Name
                                        </td>
                                        <td>@q.Email</td>
                                        <td>@q.PhoneNumber</td>
                                        <td>
                                            @q.Message
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>